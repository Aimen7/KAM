<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/windows_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:itemTextAppearance">@style/MenuItemText</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="android:actionModeBackground">@color/primary</item>
    </style>

    <style name="AboutActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/windows_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:itemTextAppearance">@style/MenuItemText</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="android:actionModeBackground">@color/primary</item>
    </style>

    <style name="MenuItemText">
        <item name="android:textColor">@color/primary</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
    </style>

    <style name="scrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>
</resources>